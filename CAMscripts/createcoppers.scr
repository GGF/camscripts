if mc <> -1 then
	sostav$ = sostav$ + ", maska-comp"
end if
if ms <> -1 then
	sostav$ = sostav$ + ", maska-sold"
end if
if rc <> -1 then
	sostav$ = sostav$ + ", mark-comp-pos"
end if
if rs <> -1 then
	sostav$ = sostav$ + ", mark-sold-pos"
end if
if rcn <> -1 then
	sostav$ = sostav$ + ", mark-comp"
end if
if rsn <> -1 then
	sostav$ = sostav$ + ", mark-sold"
end if
if mcv <> -1 then
	sostav$ = sostav$ + ", maska-comp-via"
