'next

' и опять по порядку
'layer_renumber@

For lay = Nextlay to Highestlayer!
	setlayer@ lay
	' верхние слои'
	if layertype! = 0 then 
		comp(icomp) = lay
		icomp = icomp + 1
	elseif layertype! = 3 then 
		sold(isold) = lay
		isold = isold +1
	elseif layertype!=11 then 
		masc(imasc) = lay
		imasc = imasc + 1
	elseif layertype!=12 then 
		mass(imass) = lay
		imass = imass + 1
'	elseif layertype!=7 then 
'		rc = lay
'	elseif layertype!=8 then 
'		rs = lay
	elseif layertype!=6 then 
		brd(ibrd) = lay
		ibrd = ibrd + 1
	elseif layertype!=16 then 
		if layername! = "mcv" then
			viac(iviac)=lay
			iviac=iviac+1
		else 
			silc(isilc)=lay
			isilc=isilc+1
		end if
	elseif layertype!=17 then 
		if layername! = "msv" then
			vias(ivias)=lay
			ivias=ivias+1
		else 
			sils(isils)=lay
			isils=isils+1
		end if
	elseif layertype! = 21 then 
			if instr(layername!,"mk4") > 0 then
				dril(idril) = lay
				idril = idril + 1
			end if
			if instr(layername!,"frz") > 0 then
				mill(imill) = lay
				imill = imill + 1
			end if
	end if
next

' и опять по порядку'
layer_renumber@

' теперь сливаем comp'
if icomp > 0 then
	setlayer@ comp(0)
	layer_alloff@ 1
	for lay=1 to icomp-1
		setlayer@ comp(lay)
	next
	lay = blanklayer!
	edit_layer@ lay,12,12,0,0,"c" ' номер,цвет,цвет,тип,onoff,name '
	edit_move@
	edit_selectall2@ 
	movetolayer@ lay
	MessageBox "comp"
end if

